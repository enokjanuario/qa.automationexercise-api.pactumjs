{
  "name": "qa.automationexercise-api.pactumjs",
  "version": "1.0.0",
  "description": "API Testing Automation with PactumJS",
  "main": "index.js",
  "scripts": {
    "test": "mocha 'src/tests/**/*.test.js' --timeout 10000",
    "test:contract": "mocha 'src/tests/contract/*.test.js' --timeout 10000",
    "test:functional": "mocha 'src/tests/functional/*.test.js' --timeout 10000",
    "report": "mocha 'src/tests/**/*.test.js' --reporter mochawesome --reporter-options reportDir=reports,reportFilename=report"
  },
  "keywords": [
    "pactumjs",
    "api",
    "testing",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chai": "^4.3.7",
    "joi": "^17.9.2",
    "mocha": "^10.2.0",
    "mochawesome": "^7.1.3",
    "pactum": "^3.5.0"
  }
}